<div class="well-home">
  <%= form_tag("/buy", :metohod => "post") do%>
    <%= hidden_field_tag(:asin, item[:asin])%>
    <%= hidden_field_tag(:title, item[:title])%>
    <%= hidden_field_tag(:detail_page_url, item[:detail_page_url])%>
    <%= hidden_field_tag(:category, item[:category])%>
    <%= hidden_field_tag(:small_image, item[:small_image])%>
    <%= hidden_field_tag(:medium_image, item[:medium_image])%>
    <%= hidden_field_tag(:price, item[:price])%>
    <div>
      <%= link_to image_tag(item[:medium_image], :alt=> item[:title]), item[:detail_page_url], :target => "_blank"%>
      <br/>
      <%= link_to item[:title], item[:detail_page_url], :target => "_blank" %>
      <br/>
      Category: <%= item[:category] %>
      <br/>
      Price: <%= item[:price] %>
      <br/>
      <a href="#" class="btn btn-primary btn-small" id="buy_check" >
  	    &nbsp;&nbsp;Buy&nbsp;&nbsp;
      </a>
    </div>
  <% end %>
</div>
