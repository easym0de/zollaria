<p>Search Result for <%= @search_result[:query] %>:<p>
	
<% @search_result[:items].each do |item| %>
  <%= form_tag("/buy", :metohod => "post") do%>
    <div>
      Title: <%= item[:title] %>
      <br/>
      Category: <%= item[:category] %>
      <%= hidden_field_tag(:title, item[:title])%>
      <%= hidden_field_tag(:asin, item[:asin])%>
      <br/>
      <%= submit_tag("Buy") %>
      <br/><br/>
    </div>
  <% end %>
<% end %>


